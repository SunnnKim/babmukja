    <select id="commentCount" resultType="int">
        select
            count(*)
        from comment
    </select>
    
    <select id="commentList" resultType="kr.co.babmukja.repository.domain.Comment">
    select *
	from comment
    </select>
    
    
    <insert id="commentInsert" parameterType="kr.co.babmukja.repository.domain.Comment">
        insert into comment 
        (comment_no, notice_no, content, writer, reg_date)
        values(#{commentNO},#{noticeNO},#{content},#{writer},now()) 
    </insert>
    
    <update id="commentUpdate" parameterType="kr.co.babmukja.repository.domain.Comment">
       update comment
            set content = #{content}
       where comment_no = #{commentNo}
    </update>
    
    <delete id="commentDelete" parameterType="int">
        delete
		from comment
		where comment_no = #{commentNo}
    </delete>
</mapper>
