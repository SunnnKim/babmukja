	<!-- 후기 조회 파트  -->
	<resultMap id="pbReviewSelectMap" type="storePBReview" >
		<result column="pb_review_no" property="pbReviewNo"/>
		<result column="pb_no" property="pbNo"/>
		<result column="content" property="content"/>
		<result column="rating" property="rating"/>
		<result column="regdate" property="regDate"/>
		<result column="mem_no" property="memNo"/>
		<result column="mem_Nickname" property="memNickname"/>
		<result column="path" property="path"/>
		<result column="sysname" property="sysname"/>
		
	</resultMap>
	
	<select id="selectReview" resultMap="pbReviewSelectMap" parameterType="int">
		select * 
		  from tb_pb_review 
		 where pb_no = #{pbNo}
	</select>
	
	<select id="selectPBReviewSelect" parameterType="storePBReview" resultMap="pbReviewSelectMap">
		select m.mem_nickname, r.*, f.path, f.sysname
		  from tb_pb_review r, tb_member m, tb_file f
		 where r.mem_no = m.mem_no
		   and f.pb_review_no = r.pb_review_no
		   and r.pb_no = #{pbNo}
		   and r.pb_review_no = #{pbReviewNo}
	</select>
	
